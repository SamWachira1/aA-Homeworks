<% action_url = band.persisted? ? bands_url(band) : bands_url %>
<% http_method = band.persisted? ? "PATCH" : "POST" %>


<form action="<%= action_url %>" method = "POST">
<input type="hidden" name="_method" value= "<%= http_method %>">
<%= auth_token %>


<p>
    <label for="band-name">Name</label>
    <input type="text" id= "band-name" name="band[name]" value="<%= band.name %>">
</p>


 <input type="submit">
</form>