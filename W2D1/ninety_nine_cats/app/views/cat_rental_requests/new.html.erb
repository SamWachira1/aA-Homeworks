<h1>Create Rental Request</h1>


<form action="<%= cat_rental_requests_url %>" method= "post">
<label for="cat_rental_request_id">Cat</label>
<select name="cat_rental_request[cat_id]" id="cat_rental_request_id">
<option></option>
    <% Cat.all.each do |cat| %>
    <% selected = @rental_request.cat_id == cat.id%>
    <option <%= selected ? "SELECTED" : "" %>
    value="<%= cat.id %>"> <%= cat.name %>
    </option>
    <%end %>
</select>
<br>

<label for="start_date">Start Date</label>
<input type="date" 
name="cat_rental_request[start_date]" 
id="start_date" 
value="<%= @rental_request.start_date%>">

<br>

<label for="end_date">End Date</label>
<input type="date" 
name="cat_rental_request[end_date]" 
id="end_date" 
value="<%= @rental_request.end_date%>">

<br>

<input type="submit" value="Submit Date">

</form>

